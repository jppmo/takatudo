<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-12">
      <article>
        <p><a href="/products">&larr; Back to products</a> </p>
        <hr />
        <header>
          <h1>{{data.product.title}}</h1>
        </header>
        <div class="row">
          <div class="col-md-6 col-lg-6">
            <!--
            {{#if data.product.image}}
              <img src="" class="img-responsive" />
            {{/if}}
            -->
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
              <!-- Indicators -->
              <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
              </ol>

              <!-- Wrapper for slides -->

              <div class="carousel-inner">
                {{#each data.product.images}}
                {{#if @first}}
                  <div class="item active">
                    <img src="{{{secure_url}}}" class="carouselImage">
                  </div>
                {{else}}
                  <div class="item">
                    <img src="{{{secure_url}}}" class="carouselImage">
                  </div>
                {{/if}}
                {{/each}}
              </div>

              <!-- Left and right controls -->
              <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>

          </div>
          <div class="col-md-6 col-lg-6">
            <ul class="list-group">
              <li class="list-group-item"><strong>Price: </strong>{{data.product.price}}</li>
              <!--<li class="list-group-item"><strong>Price: </strong>{{data.product.price}}</li>-->
            </ul>
            <div class="well">
              {{data.product.description}}
            </div>
            <a class="btn btn-success btn-block" href="/contact">Ask about this product</a>
          </div>
        </div>
      </article>

    </div>
  </div>
</div>
