<div class="container">
  <h1>Products</h1>
  <div class="row">
    <div class="col-md-12 col-lg-12">
      <div class="row">
        {{#each products}}
          <div class="col-md-4 col-lg-4">
            <h2><a href="{{productUrl slug}}">{{{title}}}</a></h2>

                {{#if images.0.secure_url}}
                <img src="{{{images.0.secure_url}}}" class="thumbnail" />
                {{/if}}
          </div>
          {{/each}}
      </div>
    </div>
  </div>
</div>
